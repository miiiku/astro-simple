---
import { LOCALE } from "@/consts";

interface Props {
  datetime: string | Date;
  simple?: boolean;
}

const { datetime, simple } = Astro.props;

const dt = new Date(datetime);


const date = dt.toLocaleDateString(LOCALE, {
  year: "numeric",
  month: "long",
  day: "numeric",
  dayPeriod: "long",
});

const time = dt.toLocaleTimeString(LOCALE, {
  hour: "2-digit",
  minute: "2-digit",
});

const simpleDate = dt.toLocaleDateString(LOCALE);
---

<time>{ simple ? simpleDate : `${date} | ${time}` }</time>