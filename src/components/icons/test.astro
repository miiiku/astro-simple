---
const { width = "48px", height = "48px" } = Astro.props;
---

<svg id="test_svg" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width={width} height={height} viewBox="0 0 24 24">
  <g stroke-linecap="round" stroke-linejoin="round" fill="currentColor" stroke="currentColor" stroke-width="2">
    <line id="menu-line-1" x1="3" x2="21" y1="3" y2="3"></line>
    <line id="menu-line-2" x1="7" x2="21" y1="12" y2="12"></line>
    <line id="menu-line-3" x1="12" x2="21" y1="21" y2="21"></line>

    <line id="close-line-1" x1="6" x2="18" y1="6" y2="18"></line>
    <line id="close-line-2" x1="18" x2="6" y1="6" y2="18"></line>
  </g>
</svg>

<style>
  #menu-line-1 {
    stroke-dasharray: 18px 20px;
  }

  #menu-line-2 {
    stroke-dasharray: 14px 16px;
  }

  #menu-line-3 {
    stroke-dasharray: 9px 11px;
  }

  #close-line-1 {
    stroke-dashoffset: 18px;
    stroke-dasharray: 17px 19px;
  }

  #close-line-2 {
    stroke-dashoffset: 18px;
    stroke-dasharray: 17px 19px;
  }

  #test_svg:hover #menu-line-1 {
    animation: hide-menu-line1 0.4s ease-in-out forwards;
  }

  #test_svg:hover #menu-line-2 {
    animation: hide-menu-line2 0.4s ease-in-out forwards;
  }

  #test_svg:hover #menu-line-3 {
    animation: hide-menu-line3 0.4s ease-in-out forwards;
  }

  #test_svg:hover #close-line-1 {
    animation: show-close-line 0.4s ease-in-out 0.4s forwards;
  }

  #test_svg:hover #close-line-2 {
    animation: show-close-line 0.4s ease-in-out 0.6s forwards;
  }

  @keyframes hide-menu-line1 {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -19px; }
  }

  @keyframes hide-menu-line2 {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -15px; }
  }

  @keyframes hide-menu-line3 {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -10px; }
  }

  @keyframes show-close-line {
    0% { stroke-dashoffset: 18px; }
    100% { stroke-dashoffset: 0; }
  }
</style>